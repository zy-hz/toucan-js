    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/start.js",
            "args":[
                "gs",
                "--conf",
                "1688-detail"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Temp 测试指定用例",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "test",
                "--no-timeouts",
                "--recursive",
                "--bail", // 发现错误后停止
                "--grep",
                // 指定需要运行的词
                "temp"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Fast 测试",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "test",
                "--no-timeouts",
                "--recursive",
                "--bail", // 发现错误后停止
                "--grep",
                "[[long]]|[[demo]]",
                "--invert", // 排除以上标记
                "true"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Long 测试",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "test",
                "--no-timeouts",
                "--recursive",
                // "--bail", // 发现错误后不停止
                "--grep",
                "[[long]]",
                "--grep",
                "[[demo]]",
                "--invert"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "All testing",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "test",
                "--no-timeouts",
                "--recursive",
                //"--bail" // 发现错误后不停止
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        }
    ]
}